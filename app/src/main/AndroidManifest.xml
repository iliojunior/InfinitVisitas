<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="br.com.infinitsolucoes.infinitvisitas"
    tools:ignore="InnerclassSeparator">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-feature android:name="android.hardware.location.gps" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="AllowBackup">
        <activity
            android:name=".ActivityControllers.Consulta.ConsultaAgendaActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ActivityControllers.LoginActivity"
            android:label="@string/title_activity_login" />
        <activity
            android:name=".ActivityControllers.Cadastro.CadastroLeadActivity"
            android:label="@string/title_activity_cadastro_lead" />
        <activity
            android:name=".ActivityControllers.Consulta.ConsultaLeadActivity"
            android:label="@string/title_activity_leads"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".ActivityControllers.Cadastro.CadastroVisitasActivity" />
        <activity
            android:name=".ActivityControllers.Consulta.ConsultaLeadsQualificadosActivity"
            android:label="@string/title_activity_lead_qualificado"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ActivityControllers.Consulta.ConsultaOportunidadeActivity"
            android:label="@string/title_activity_oportunidade"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ActivityControllers.Consulta.SelecionarClienteActivity"
            android:label="@string/title_activity_selecionar_cliente"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ActivityControllers.Consulta.ConsultaVendasActivity"
            android:label="@string/title_activity_consulta_vendas"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ActivityControllers.Consulta.ContatosActivity"
            android:label="@string/title_activity_contatos"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ActivityControllers.Cadastro.CadastroFollowUpActivity"
            android:label="@string/title_activity_cadastro_follow_up"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ActivityControllers.Consulta.ConsultaFollowUpActivity"
            android:label="@string/title_activity_scrolling"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>