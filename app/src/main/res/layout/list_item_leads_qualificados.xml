<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/nivel_interesse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/circle_textview"
        android:gravity="center"
        android:padding="3dp"
        android:text="5.0"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_size_title" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/nivel_interesse"
        android:layout_toRightOf="@+id/nivel_interesse"
        android:paddingLeft="@dimen/activity_horizontal_margin">

        <TableRow>

            <TextView
                android:id="@+id/nome_empresa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="JP Suprimentos"
                android:textColor="#000"
                android:textSize="@dimen/text_size_title" />
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/telefone_empresa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="(44) 3013-2610" />
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/endereco_empresa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Av. mandacaru, 1375" />
        </TableRow>
    </TableLayout>
</RelativeLayout>